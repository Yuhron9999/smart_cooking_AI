# Smart Cooking AI Service - Enhanced Environment Configuration

# Google API Keys (Required for location and regional features)
GOOGLE_API_KEY=sk-replace-with-your-actual-google-api-key
GEMINI_API_KEY=sk-replace-with-your-actual-gemini-api-key

# OpenAI API Key (Required for AI recipe generation)
OPENAI_API_KEY=sk-replace-with-your-actual-openai-api-key

# OpenAI Configuration
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_MAX_TOKENS=2000
OPENAI_TEMPERATURE=0.7

# Service Configuration
HOST=0.0.0.0
PORT=8001
DEBUG=True
LOG_LEVEL=INFO

# CORS Configuration (Include all frontend ports)
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:3002,http://localhost:3003,http://localhost:8080

# Logging Level
LOG_LEVEL=INFO

# Database Configuration (if needed in future)
DATABASE_URL=mysql://root:password@localhost:3306/smartcooking

# File Upload Configuration
MAX_UPLOAD_SIZE=10485760  # 10MB
ALLOWED_EXTENSIONS=jpg,jpeg,png,gif,webp

# Cache Configuration
REDIS_URL=redis://localhost:6379/0

# Feature Flags
ENABLE_IMAGE_ANALYSIS=true
ENABLE_VOICE_PROCESSING=true
ENABLE_RECIPE_GENERATION=true
